            %ul.nav.pull-right
              %li.about= link_to("#{image("nav-about")} About", '/about')

    #content.container-fluid
      = yield

    %script{ :src => "lib/jquery/js/jquery.min.js" }
    %script{ :src => "lib/bootstrap/js/bootstrap.min.js" }
    %script{ :src => "javascripts/app.js", :defer => true }
