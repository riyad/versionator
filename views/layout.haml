%html
  %head
    %link{ :href => "css/bootstrap.min.css", :rel => "stylesheet" }
    %link{ :href => "css/main.css", :rel => "stylesheet" }
    %title Versionator
  %body
    %nav
      .navbar.navbar-fixed-top
        .navbar-inner
          .container
            =link_to "#{image("nav-index")} Versionator", '/', :class => "brand"

            %ul.nav
              %li= link_to("#{image("nav-installations")} Installations", '/')
              %button#refresh-installations-button.btn
                %i.icon-refresh
                Reload
                = busy_indicator

            %ul.nav.pull-right
              %li.about= link_to("#{image("nav-about")} About", '/about')

    #content.container-fluid
      = yield

    %script{ :src => "js/jquery.min.js" }
    %script{ :src => "js/bootstrap.min.js" }
    %script{ :src => "js/main.js", :defer => true }
