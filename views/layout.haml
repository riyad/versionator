%html
  %head
    %link{ :href => "css/bootstrap.min.css", :rel => "stylesheet" }
    %link{ :href => "css/bootstrap-responsive.min.css", :rel => "stylesheet" }
    %link{ :href => "css/main.css", :rel => "stylesheet" }
    %title Versionator
  %body
    %nav
      .navbar.navbar-fixed-top
        .navbar-inner
          .container
            =link_to "#{image("nav-index")} Versionator", '/', :class => "brand"

            %ul.nav
              %li= link_to("#{image("nav-installations")} Installations", '/')
              %li
                %button.btn.js-refresh-installations-button
                  %i.icon-refresh
                  Reload
                  = busy_indicator

            %ul.nav.pull-right
              %li.about= link_to("#{image("nav-about")} About", '/about')

    #content.container-fluid
      = yield

    %script{ :src => "js/jquery.min.js" }
    %script{ :src => "js/bootstrap.min.js" }
    %script{ :src => "js/handlers.js", :defer => true }
    %script{ :src => "js/misc.js", :defer => true }
    %script{ :src => "js/render.js", :defer => true }
